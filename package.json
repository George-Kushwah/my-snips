{
  "name": "sab-kuch",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "dev": "rsbuild dev --open",
    "build": "rsbuild build",
    "preview": "rsbuild preview",
    "test": "jest --watchAll=false --coverage --testResultsProcessor jest-sonar-reporter -u",
    "sonar": "node sonarqube-scanner.js"
  },
  "dependencies": {
    "@babel/preset-react": "^7.26.3",
    "@popperjs/core": "^2.11.8",
    "@reduxjs/toolkit": "^2.5.0",
    "@rsbuild/plugin-sass": "^1.1.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@types/jest": "^29.5.14",
    "@types/react-redux": "^7.1.34",
    "@types/redux-saga": "^0.9.31",
    "axios": "^1.7.9",
    "babel-jest": "^29.7.0",
    "bootstrap": "^5.3.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-sonar-reporter": "^2.0.0",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-redux": "^9.2.0",
    "react-router-dom": "^6.28.0",
    "redux-saga": "^1.3.0",
    "sass": "^1.82.0",
    "ts-jest": "^29.2.5"
  },
  "devDependencies": {
    "@rsbuild/core": "^1.1.4",
    "@rsbuild/plugin-react": "^1.0.7",
    "@types/react": "19.0.1",
    "@types/react-dom": "19.0.2",
    "sonarqube-scanner": "^4.2.6",
    "typescript": "^5.7.2"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "roots": [
      "<rootDir>/src"
    ],
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "html"
    ],
    "transform": {
      "^.+\\.(t|j)sx?$": "ts-jest"
    },
    "resetMocks": true,
    "collectCoverageFrom": [
      "src/layout/*.{js,ts,tsx}",
      "!src/**/*.d.ts",
      "!src/__test__/*.tsx",
      "!src/app.tsx",
      "!src/index.tsx"
    ],
    "coveragePathIgnorePatterns": [
      "src/Redux/*.ts",
      "src/layout/Axios-list.tsx"
    ],
    "coverageThreshold": {
      "global": {
        "lines": 80
      }
    }
  }
}
